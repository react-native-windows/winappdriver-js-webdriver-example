{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es6",
      "module": "commonjs",
      "jsx": "react",
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "noEmit": true,
      "noUnusedLocals": true,
      "strict": true,
      "rootDir": ".",
      "esModuleInterop": true,
      "types": [
        "@wdio/sync",
        "@wdio/jasmine-framework",
        "@types/jasmine",
        "node"
      ]
    },
    "include": [
      "pages",
      "test"
    ],
    "exclude": [
      "node_modules"
    ]
  }